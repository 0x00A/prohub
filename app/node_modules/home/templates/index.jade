section.home

  .error(style="display: none;", role="alert")
    span.text Error happended

  header
    h1= org
    .button-group
      input.add(type="button", title="Add new project", value="Add")
      input.login(type="button", title="Login to Github", value="Login")
    h3 Projects

  hr
  ul.projects-list.unstyled
    each project in projects
      li
        a(href= '/project/' + project.id)
          != project.name
        i.ss-icon.delete

  .unauthorized
    p

.modal
  .modal-content
    div
      p Please specify the name of this project.
      input.project-name(type="text", placeholder="Project Name")
      .response
        p 
      .button-group
        input.modal-close(type="button", value="Close")
        input.modal-ok(type="button", value="ok")

.modal-overlay

