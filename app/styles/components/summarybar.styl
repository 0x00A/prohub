.summarybar
  font-family $font-Carrois 
  text-align center
  padding 0 20px
  margin-bottom: 20px
  color $444
   
  .row
    display table
    table-layout fixed
    width 100%
    text-transform uppercase

    .col
      width 15%
      height 85px
      text-align left
      display table-cell

      h2
        margin 8px 0
        font-size 2em
      p
        font-size: 12px
        margin: 0

