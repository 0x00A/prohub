
.datebar-container
  width 80%
  margin 40px auto

  .datebar
    position reliatve
    height 20px
    width 100%
    background #ddd
    border-radius 2px

    .progress
      height 20px
      width 40%
      background $blue

    .tooltip 
      position absolute
      text-transform uppercase
      line-height 30px
      top 20px
      color white
      right 10%
      min-width 100px
      height 30px
      border-radius 2px
      background #777
      text-align center

    .tooltip:after 
      top 30px;
      left 50%
      border solid transparent
      content " "
      height 0
      width 0
      position absolute
      pointer-events none
      border-color rgba(51, 51, 51, 0)
      border-top-color #777
      border-width 10px
      margin-left -10px

