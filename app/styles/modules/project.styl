section.project
  font-family $font-Carrois

  .chart
    margin 20px 0 40px 0

  header
    margin 0px 10px 0px 20px
    position relative

  .button-group
    position absolute
    right 15px
    top 185px

    input[type="button"]
      margin 0 10px 0 0
      float right

  h1, h1 a
    margin 25px 0px
    font-family $font-Roboto

  h1 a, h1 a:hover
    text-decoration none
    color $blue
    padding 18px

  .donut
    height 450px

    svg 
      width 100%
      height 100%
      
    path.slice
      stroke-width2px

    polyline
      opacity .3
      stroke black
      stroke-width 2px
      fill none

  .contributors
    text-align center
    display flex
    flex-flow row wrap
    align-content flex-end
    align-items center
    width 100%

    .contributor
      margin 20px
      width 15%

      img
        margin 10px
        width 50px
        height 50px
        border-radius 2px

      a
        color: #666


.c3 path
  stroke #aaa

.c3-chart-arcs-title
  fill #666
  font-size 36px
  dominant-baseline middle
  font-weight 600

